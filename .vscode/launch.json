{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Debug with Reload",
  "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "justMyCode": true,
      "env": {
        "FLASK_APP": "main.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--reload"],
      "jinja": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: main.py (direct)",
  "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "env": {
        "FLASK_ENV": "development"
      }
    }
  ]
}
